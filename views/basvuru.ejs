<body>

    
   <!--menu-->
   <%- include ("partials/_menu")%>



    <section id="destekOlun" class="destekArea">
        <div class="destekGovde">
            <div class="wrapper">
                <form action="users/basvuru" method="POST">
                    <h1>E-Bülten</h1>
                    <h4>Son Gelişmelerden Haberdar olmak için kayıt olun.</h4>
                    <div class="input-box">
                        <div class="input-field">
                            <input type="text" placeholder="İsim" Name="isim">
                            <i class='bx bxs-user'></i>
                        </div>
                        <div class="input-field">
                            <input type="text" placeholder="Soyisim" Name="soyisim">
                            <i class='bx bxs-user'></i>
                        </div>
                        <div class="input-field">
                            <input type="email" placeholder="E-Mail" Name="email" autocapitalize="none">
                            <i class='bx bxs-envelope'></i>
                        </div>

                        <button type="submit" class="btn">KAYIT</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var form = document.querySelector('form');
    
            form.addEventListener('submit', function(event) {
                var isimInput = form.querySelector('input[name="isim"]');
                var soyisimInput = form.querySelector('input[name="soyisim"]');
                var emailInput = form.querySelector('input[name="email"]');
    
                if (isimInput.value.trim() === '' || soyisimInput.value.trim() === '' || emailInput.value.trim() === '') {
                    alert('Lütfen tüm boşlukları doldurunuz.');
                    event.preventDefault(); // Formun gönderilmesini engelle
                }
            });
        });
    </script>


    <script>
        function validateForm() {
            var isim = document.getElementById("isim").value;
            var soyisim = document.getElementById("soyisim").value;
            var email = document.getElementById("email").value;

            if (isim === "" || soyisim === "" || email === "") {
                alert("Lütfen tüm boşlukları doldurunuz.");
                return false;
            }
        }
    </script>




   
