<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anasayfa</title>

    <link rel="shortcut icon" type="image/png" href="\img\logo2.png" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="\css\basvuru.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>


    <!--menu-->
    <%- include ("partials/_menu")%>


        
    <section id="destekOlun" class="destekArea">
        <div class="destekGovde">
            <div class="wrapper">
                <form action="comments/yorum" method="POST">
                    <h1>Yorumunuzu Paylaşın</h1><br><br>
                    <div class="input-box">
                        <div class="input-field">
                            <input type="text" placeholder="Adınız" Name="ad">
                        </div>
                        <div class="input-field">
                            <input type="text" placeholder="E-Mail" Name="email">
                        </div>
                        <div class="input-field">
                            <textarea id="comment" name="comment" placeholder="Yorumunuz" rows="4" required></textarea>
                        </div>

                        <button type="submit" class="btn">Yorum Gönder</button>
                    </div>
                </form>
                <div id="commentList">
                    <!-- Yorumlar burada listelenecek -->
           
                </div>
            </div>
        </div>
    </section>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var form = document.querySelector('form');
    
            form.addEventListener('submit', function(event) {
                var isimInput = form.querySelector('input[name="ad"]');
                var emailInput = form.querySelector('input[name="email"]');
                var commentInput = form.querySelector('textarea[name="comment"]');
    
                if (isimInput.value.trim() === '' || emailInput.value.trim() === '' || commentInput.value.trim() === '') {
                    alert('Lütfen tüm boşlukları doldurunuz.');
                    event.preventDefault(); // Formun gönderilmesini engelle
                }
            });
        });
        
        // Sayfa yüklendiğinde yorumları al ve listele
        window.onload = async function () {
            const response = await fetch('/comments/yorum');
            const result = await response.json();
    
            if (result.succeeded) {
                const commentListDiv = document.getElementById('commentList');
                result.comments.forEach(comment => {
                    const commentItem = document.createElement('div');
                    commentItem.innerHTML = `<strong>${comment.ad}:</strong> ${comment.comment}`;
                    commentListDiv.appendChild(commentItem);
                });
            } else {
                alert('Yorumlar getirilirken bir hata oluştu.');
            }
        };
    </script>

